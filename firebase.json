{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source": "**",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      } ]
    }, {
      "source": "/service-worker.js",
      "headers": [ {
        "key": "Cache-Control",
        "value": "no-cache"
      } ]
    } ]
  }
}
